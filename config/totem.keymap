        b {
            bindings = <&kp CLCK>;
            key-positions = <10 11 12>;
        };

        d {
            bindings = <&kp DEL>;
            key-positions = <8 9>;
        };

        e {
            bindings = <&kp ENTER>;
            key-positions = <18 17>;
        };

        h {
            bindings = <&sys_reset>;
            key-positions = <1 12 13 25>;
        };

        j {
            bindings = <&sys_reset>;
            key-positions = <17 8 16 26>;
        };

        Backslash_pipe {
            bindings = <&mt PIPE BACKSLASH>;
            key-positions = <29 30>;
        };

        print_screen {
            bindings = <&screenshot>;
            key-positions = <21 22 23>;
        };

        num_layer {
            bindings = <&to 2>;
            key-positions = <6 7 5>;
