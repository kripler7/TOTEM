&mt {
    tapping-term-ms = <200>;
    quick-tap-ms = <175>;
    flavor = "balanced";
    hold-trigger-key-positions = <16 17 18 13 12 11 21>;
    hold-trigger-on-release;
};

&mmv {
};

&msc {
};

&lt {
};

